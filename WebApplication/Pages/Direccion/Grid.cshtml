@page
@model WebApplication.Pages.GridModel
@{
}

<br />
<div class="container-fluid">
    <div class="card">
        <div class="card-header">

            Dirección


        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bxs-comment-add'></i>
            </a>

            <div class="row">

                <div class="col-12"></div>
                <table id="GridView" class="table table-bordered table-striped table-over">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Persona</th>
                            <th>Provincia</th>
                            <th>Canton</th>
                            <th>Distrito</th>
                            <th>Direccion Exacta</th>
                            <th>Estado</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GridList)
                        {
                        <tr>
                            <td>@item.IdDireccion</td>
                            <td>@item.Persona.Nombre</td>
                            <td>@item.Provincia.NombreCatalogoProvincia</td>
                            <td>@item.Canton.NombreCatalogoCanton</td>
                            <td>@item.Distrito.NombreCatalogoDistrito</td>
                            <td>@item.DireccionExacta</td>
                            <td>@(item.Estado ?"Activo" :"Inactivo")</td>
                            <td>
                                <a class="btn btn-outline-primary" asp-page="Edit" asp-route-id="@item.IdDireccion">
                                    <i class='bx bx-edit-alt'></i>
                                </a>
                                <button type="button" class="btn btn-outline-danger"
                                        onclick="DireccionGrid.OnClickEliminar(@item.IdDireccion)">
                                    <i class='bx bx-trash'></i>
                                </button>
                            </td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>


        </div>
    </div>
</div>


@section Scripts{

    <script defer src="~/App/Direccion/Grid.js"></script>

}